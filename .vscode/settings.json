{
  // Word wrap settings for Markdown and MDX files
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "same"
  },
  "[mdx]": {
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "same"
  },

  // General editor settings
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // File associations
  "files.associations": {
    "*.mdx": "mdx"
  }
}
